<!DOCTYPE html>
<html>
  <head>
    <title>Nytt REKO produkt</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Add Bootstrap CSS file -->
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' %>
  </head>

  <body>
    <div class="container-fluid bg-dark text-light">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <h1 class="text-center">Nytt REKO produkt</h1>

          <%= form_with model: @product, url: spree_products_path do |form| %>
            <div class="form-group text-center">
              <%= form.label :producer, class: "fw-bold mb-0" %>
              <%= form.select :producer, options_for_select(['Produsent 1', 'Produsent 2', 'Produsent 3']), { prompt: 'Velg produsent' }, class: "form-control" %>
            </div>

            <div class="form-group text-center">
              <%= form.label :name, class: "fw-bold mb-0" %>
              <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group text-center">
              <%= form.label :description, class: "fw-bold mb-0" %>
              <%= form.text_area :description, class: "form-control" %>
            </div>

            <div class="form-group text-center">
              <%= form.label :price, class: "fw-bold mb-0" %>
              <%= form.number_field :price, class: "form-control" %>
            </div>

            <div class="text-center">
              <%= form.submit "Legg til produkt", class: "btn btn-primary" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>

    <!-- Add Bootstrap JavaScript file -->
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js' %>
  </body>
</html>
